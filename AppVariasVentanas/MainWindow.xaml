<Window x:Class="AppVariasVentanas.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppVariasVentanas"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" ></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Button Name="boton1" Content="Login" Margin="5"  Background="Navy" Foreground="White" Click="boton1_Click"/>
            <Button Name="boton2" Content="Acerca De" Margin="5"  Background="Navy" Foreground="White" Click="boton2_Click"/>
        </StackPanel>
        <Frame Name="frame1" Grid.Row="1" Background="Azure"/>
    </Grid>    
</Window>
